<link rel="stylesheet" href="/styles/prozess.css">
<link rel="stylesheet" href="/styles/prozesstwo.css">
<% layout("layouts/boilerplate") %>
<!-- NAV + HEADER -->
<main>
  <div class="container-fluid">
    <div class="header-bg">
      <img id="header-img" src="/img/gesamt/Projekt/Prozess6.png" class="img-fluid cover-header">
    </div>
    <!-- TABLE BLOCK -->
    <div class="block" id="block-prozess">
      <img class="logo" src="/img/gesamt/Logos/icon_prozess.png" alt="">
      <h1 id="" class="ws-title title-line"><span ><%= prozess.title %></span></h1>
      <div class="prozess-text" id="ws-intro"><%-prozess.description %></div>
    </div>
      <div class="prz-btn-box">
        <% if(currentUser) {%>
        <a href="/prozesse/<%= prozess._id %>/edit" class="btn btn-mina btn-prz-text">Text bearbeiten</a>
        <a href="/prozess-flyers/neu" class="btn btn-mina btn-prz-text">Flyer Hinzufügen</a>
        <a href="/prozess-flyers/<%=prozessflyer._id %>/edit" class="btn btn-info btn-prz-text">Flyer Bearbeiten</a>
        <% } %>
        <% if(prozessflyer) {%>
          <% prozessflyer.images.forEach((img, i) => { %>
            <a href="<%=img.attach%>" download class="btn btn-mina btn-prz-text" id="btn-flyer" target="_blank"><%=prozessflyer.title%></a>
            <% }) %>
            <a  href="/2020-2021-prozess-begleitung" class="btn btn-prz-flyer">Rückblick Prozessbegleitung <br> 2020-2021</a>
        <% } else { %>
        <a  href="/downloads/2022_Infoblatt_Verlängerung.pdf" target="_blank" class="btn btn-prz-flyer"  target="_blank">Flyer <br> Prozessbegleitung</a>
        <a  href="/2020-2021-prozess-begleitung" class="btn btn-prz-flyer">Rückblick Prozessbegleitung <br> 2020-2021</a>
        <% } %>
      </div>
    <!-- Kontakt -->
    <div class="container-fluid contact-box" id="prozess-contact">
      <h1 class="white"><span class="title-line">Ansprechperson</span></h1>
      <div class="row">
        <div class="worker col" id="ivan">
          <img class="contact-img" src="/img/gesamt/Mitarbeiter/12_Vivian.png" alt="">
          <div class="worker-info" id="prozess-ap">
            <ul>
              <li class="worker-title">Prozessbegleitung</li>
              <li>Vivian Makowka</li>
              <li>030 – 62 93 40 31</li>
              <li><a href="mailto:v.makowka@mina-berlin.de">v.makowka@mina-berlin.de</a> </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
