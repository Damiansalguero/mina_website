<link rel="stylesheet" href="/styles/forms.css">
<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class=""><span class="title-line line-pink">Aktuelles Hinzufügen</span></h1>
  <div class="col-6 offset-3">
    <form action="/aktuelles" method="post" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title" name="aktuell[title]" required>
      </div>
      <div class="mb-3">
        <label for="formFile" class="form-label">Bilder</label>
        <input class="form-control" id="image" type="file" name="image" multiple>
      </div>
      <div class="mb-3">
        <label class="form-label" for="link">Link (Optional)</label>
        <input class="form-control" type="text" id="link" name="aktuell[link]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Beschreibung</label>
        <textarea class="form-control" type="text" id="description" name="aktuell[description]" required></textarea>
        <script>
                CKEDITOR.replace( 'description' );
            </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-success btn-mina">Speichern</button>
      </div>
    </form>
    <a class="btn btn-primary btn-mina" href="/">Zurück</a>
  </div>
</div>
