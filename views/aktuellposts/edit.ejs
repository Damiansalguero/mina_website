<% layout("layouts/boilerplate") %>
    <div class="row">
      <h1 class="text-center">Aktuelles Bearbeiten</h1>
      <div class="col-6 offset-3">
        <form action="/aktuelles/<%=aktuell._id%>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label" for="title">Überschrift</label>
            <input class="form-control" type="text" id="title" name="aktuell[title]" required value="<%=aktuell.title%>">
          </div>
          <div class="mb-3">
            <div class="form-file custom-file">
              <input class="form-file-input" id="image" type="file" name="image" multiple>
              <label for="image" class="form-file-label">
                <span class="form-file-text custom-file-label">Bild(er) hinzufügen ...</span>
                <span class="form-file-button">Durchsuchen</span>
              </label>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Beshreibung</label>
            <textarea class="form-control" type="text" id="description" name="aktuell[description]" required><%=aktuell.description%></textarea>
            <script type="text/javascript">
                    CKEDITOR.replace( 'description' );
                </script>
          </div>
          <div class="mb-3">
            <% aktuell.images.forEach(function(img, i) { %>
              <!-- thumbnail matches the key from the campground model -->
              <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
              <div class="form-check-inline">
                <!-- id here add index of the images -->
                <!-- value here add the rght data of the foto -->
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                <label for="image-<%=i%>">Löschen ?</label>
              </div>
            <% }) %>
          </div>
          <div class="mb-3">
            <button class="btn btn-info">Aktuallisieren</button>
          </div>
        </form>
        <a class="btn btn-primary btn-mina" href="/">Zurück</a>
      </div>
    </div>
