<link rel="stylesheet" href="/styles/forms.css">
<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center"><span class="title-line line-pink">Haupttext Bearbeiten</span></h1>
   <div id="form-partizip-edit" class="col-6 offset-3">
    <form action="/partizipatives/<%=partizip._id%>?_method=PUT" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title1" name="partizip[title]" required value="<%=partizip.title%>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Text</label>
        <textarea class="form-control" type="text" id="description" name="partizip[description]" required><%=partizip.description%></textarea>
        <script type="text/javascript">
          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Aktuallisieren</button>
      </div>
    </form>
    <a class="btn btn-primary btn-mina" href="/partizipatives-projekt">Zurück</a>
  </div>
</div>
