      <div class="card-body">
        <a hdisplay: flex; flex-direction: column; align-items: center; width: 50%; color: #fff; text-align: justify; font-size: 18px;ref="/partizipatives/gallerien/<%= ptg._id %>" class="btn btn-aktuelles-blue">Zur Gallerie</a>
      </div>
    </div>
    <% }%>
  </div>
  <% if(currentUser) {%>
  <a href="/partizipatives/gallerien/neu" class="btn btn-ws-gallery">Gallerie Hinzufügen</a>
  <% } %>
</div>
<% } %>

