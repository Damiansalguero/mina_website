<% layout("layouts/boilerplate") %>
    <div class="row">
      <h1 class="text-center">Gallerie Bearbeiten</h1>
      <div class="col-6 offset-3">
        <form action="/workshops/gallerien/<%=wsg._id%>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="wsg[title]" required value="<%=wsg.title%>">
          </div>
          <div class="mb-3">
            <div class="form-file custom-file">
              <input class="form-file-input" id="image" type="file" name="image" multiple>
              <label for="image" class="form-file-label">
                <span class="form-file-text custom-file-label">Add more image(s) ...</span>
                <span class="form-file-button">Browse</span>
              </label>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Beschreibung</label>
            <textarea class="form-control" type="text" id="description" name="wsg[description]" required><%=wsg.description%></textarea>
            <script>
                    CKEDITOR.replace( 'description' );
                </script>
          </div>
          <div class="mb-3">
            <% wsg.images.forEach(function(img, i) { %>
              <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
              <div class="form-check-inline">
                <!-- id here add index of the images -->
                <!-- value here add the rght data of the foto -->
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                <label for="image-<%=i%>">Löschen?</label>
              </div>
            <% }) %>
          </div>
          <div class="mb-3">
            <button class="btn btn-info">Speichern</button>
          </div>
        </form>
        <a href="/workshops">Zurück</a>
      </div>
    </div>
