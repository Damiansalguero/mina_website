<link rel="stylesheet" href="/styles/workshops.css">
<% layout("layouts/boilerplate") %>
    <h1>Alle Gallerien</h1>
      <% for(let wsg of workshopgalleries) {%>
        <div class="card mb-3">
          <% if(wsg.images) {%>
            <div class="col-md-4">
              <img class="img-fluid" alt="" src= "<%= wsg.images[0].url %>">
            </div>
            <% } %>
            <div class="col-md-8">
              <div class="card-body">
                <h5><%=wsg.title%></h5>
                <p class= "card-text"><%-wsg.description%></p>
                <a href="/workshop/gallerien/<%=wsg._id%>" class="btn btn-primary">View</a>
              </div>
            </div>
        </div>
      <% }%>
