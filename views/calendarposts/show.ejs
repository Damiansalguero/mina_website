<link rel="stylesheet" href="/styles/calendar.css">
<% layout("layouts/boilerplate") %>

<div class="calendar-card">
<h1 class=""><span class="title-line line-pink">Übersicht <%= calendar.title %></span></h1>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><span class="span">Titel:</span> <%= calendar.title %></h5>
    <p class="card-text"><%- calendar.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><span class="span">Datum:</span> <%= calendar.date %></li>
    <li class="list-group-item"><span class="span">Telefonnummer:</span> <%= calendar.phone %></li>
  </ul>
  <div class="card-body">
    <a href="mailto:<%= calendar.email %>" class="card-link"><span class="span">Email:</span> <%= calendar.email %></a>
  </div>
</div>

<% if (currentUser) {%>
  <div class="btn-group">
    <div class="btn-edit">
    <a class="card-link btn btn-info" href="/calendars/<%=calendar._id%>/edit">Bearbeiten</a>
  </div>
    <form class="d-inline" action="/calendars/<%=calendar._id%>?_method=DELETE" method="post">
      <button class="btn btn-danger">Löschen</button>
    </form>
    <div class="">
      <a class="btn btn-primary btn-mina" href="/home">Zurück</a>
    </div>
  <% } else { %>
    <a class="btn btn-primary btn-mina" href="/home"">Zurück</a>
    <% } %>
</div>
</div>
