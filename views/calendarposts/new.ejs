<link rel="stylesheet" href="/styles/forms.css">
<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class=""><span class="title-line line-pink">Kalendereintrag Hinzufügen</span></h1>
  <div id="form-calendar-new" class="col-6 offset-3">
    <form action="/calendars" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title" name="calendar[title]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="date">Startdatum</label>
        <input class="form-control" type="date" id="date" name="calendar[date]" required >
      </div>
      <div class="mb-3">
        <label class="form-label" for="datetwo">Enddatum (Optional)</label>
        <input class="form-control" type="text" id="datetwo" name="calendar[datetwo]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="link">Link (Optional)</label>
        <input class="form-control" type="text" id="link" name="calendar[link]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Beschreibung</label>
        <textarea class="form-control" type="text" id="description" name="calendar[description]" required></textarea>
        <script>
                CKEDITOR.replace( 'description' );
            </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Speichern</button>
      </div>
    </form>
    <a class="btn btn-primary btn-mina" href="/">Zurück</a>
  </div>
</div>
