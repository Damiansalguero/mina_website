                CKEDITOR.replace( 'auswahl' );
            </script>
      </div>
      <div class="mb-3">
        <label class="form-label label-bold" for="kennenlern">Kennenlernphase</label>
        <textarea class="form-control" type="text" id="kennenlern" name="timelinethree[kennenlern]"></textarea>
        <script>
                CKEDITOR.replace( 'kennenlern' );
            </script>
      </div>
      <div class="mb-3">
        <label class="form-label label-bold" for="bedarf">Bedarfsanalyse</label>
        <textarea class="form-control" type="text" id="bedarf" name="timelinethree[bedarf]"></textarea>
        <script>
                CKEDITOR.replace( 'bedarf' );
            </script>
      </div>
      <div class="mb-3">
        <label class="form-label label-bold" for="auswertung">Auswertung</label>
        <textarea class="form-control" type="text" id="auswertung" name="timelinethree[auswertung]"></textarea>
        <script>
                CKEDITOR.replace( 'auswertung' );
