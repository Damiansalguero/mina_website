      </div>
      <div class="mb-3">
        <label class="form-label label-bold" for="idee">Ideenfindung</label>
        <textarea class="form-control" type="text" id="idee" name="timelinethree[idee]"></textarea>
        <script>
                CKEDITOR.replace( 'idee' );
            </script>
      </div>
      <div class="mb-3">
        <label class="form-label label-bold" for="evaluation">Winter 2023 – Evaluation</label>
        <textarea class="form-control" type="text" id="evaluation" name="timelinethree[evaluation]"></textarea>
        <script>
                CKEDITOR.replace( 'evaluation' );
            </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-success btn-mina">Speichern</button>
      </div>
    </form>
    <a class="btn btn-aktuelles-blue" href="/prozess-begleitung">Zurück</a>
  </div>
</div>
