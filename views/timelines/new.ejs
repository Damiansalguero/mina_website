<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class=""><span class="title-line line-pink">Zeitstrahl Eintrag Hinzufügen</span></h1>
  <div class="col-6 offset-3">
    <form action="/zeitstrahl" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title" name="timeline[title]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="date">Datum</label>
        <input class="form-control" type="text" id="date" name="timeline[date]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="phase">Phase</label>
        <input class="form-control" type="text" id="phase" name="timeline[phase]"required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Beschreibung</label>
        <textarea class="form-control" type="text" id="description" name="timeline[description]" required></textarea>
        <script>
          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-success btn-mina">Speichern</button>
      </div>
    </form>
    <a href="/workshops">Zurück</a>
  </div>
</div>
