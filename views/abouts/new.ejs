<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class=""><span class="title-line line-pink">Über Sektion Hinzufügen</span></h1>
  <div class="col-6 offset-3">
    <form action="/ueberehrenamt" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift 1</label>
        <input class="form-control" type="text" id="title" name="about[title]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Beschreibung 1</label>
        <textarea class="form-control" type="text" id="description" name="about[description]" required></textarea>
        <script>
          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <label class="form-label" for="secondtitle">Überschrift 2</label>
        <input class="form-control" type="text" id="secondtitle" name="about[secondtitle]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="seconddescription">Beschreibung 2</label>
        <textarea class="form-control" type="text" id="seconddescription" name="about[seconddescription]" required></textarea>
        <script>
          CKEDITOR.replace('seconddescription');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-success btn-mina">Speichern</button>
      </div>
    </form>
    <a href="/">Zurück</a>
  </div>
</div>
