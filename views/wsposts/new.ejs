<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class=""><span class="title-line line-pink">Workshop Hinzufügen</span></h1>
  <div class="col-6 offset-3">
    <form action="/workshops" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="date">Datum</label>
        <input class="form-control" type="text" id="date" name="workshop[date]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title" name="workshop[title]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Ort</label>
        <input class="form-control" type="text" id="location" name="workshop[location]"required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="capacity">Verfügbarkeit</label>
        <input class="form-control" type="text" id="capacity" name="workshop[capacity]"required>
      </div>
      <!-- <div class="mb-3">
        <label class="form-label" for="capacity">Verfügbarkeit</label>
        <select class="form-control" id="capacity" name="workshop[capacity]">
          <option value="anmelden">anmelden</option>
          <option value="ausgebucht">ausgebucht</option>
        </select>
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="description">Beschreibung</label>
        <textarea class="form-control" type="text" id="description" name="workshop[description]" required></textarea>
        <script>
          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-success btn-mina">Speichern</button>
      </div>
    </form>
    <a href="/mina/workshops">Zurück</a>
  </div>
</div>
