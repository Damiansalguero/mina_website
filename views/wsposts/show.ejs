<% layout("layouts/boilerplate") %>


<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= workshop.title %></h5>
    <p class="card-text"><%- workshop.date %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= workshop.location %></li>
    <li class="list-group-item"><%= workshop.capacity %></li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link"><%- workshop.description %></a>
  </div>
<% if (currentUser) {%>
  <div class="btn-edit">
    <a class="card-link btn btn-info" href="/calendars/<%=workshop._id%>/edit">Bearbeiten</a>
    <form class="d-inline" action="/calendars/<%=workshop._id%>?_method=DELETE" method="post">
      <button class="btn btn-danger">Löschen</button>
    </form>
  </div>
</div>
  <a class="btn btn-primary btn-mina" href="/calendars/übersicht">Zurück</a>
  <% } else { %>
    <a class="btn btn-primary btn-mina" href="/calendars/übersicht"">Zurück</a>
    <% } %>
