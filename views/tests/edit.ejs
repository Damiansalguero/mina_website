<% layout("layouts/boilerplate") %>
    <div class="row">
      <h1 class="text-center">Test Bearbeiten</h1>
      <div class="col-6 offset-3">
        <!-- For image uploads the form needs to be set enctype="multipart/form-data" -->
        <form action="/test/<%=test._id%>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="test[title]" required value="<%=test.title%>">
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="test[location]" required value="<%=test.location%>">
          </div>
          <div class="mb-3">
            <label class="form-label" for="date">Datum</label>
            <input class="form-control" type="text" id="date" name="test[date]" required value="<%=test.date%>">
          </div>
          <div class="mb-3">
            <div class="form-file custom-file">
              <input class="form-file-input" id="image" type="file" name="image" multiple>
              <label for="image" class="form-file-label">
                <span class="form-file-text custom-file-label">Add more image(s) ...</span>
                <span class="form-file-button">Browse</span>
              </label>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Beschreibung</label>
            <textarea class="form-control" type="text" id="description" name="test[description]" required><%=test.description%></textarea>
          </div>
          <div class="mb-3">
            <% test.images.forEach(function(img, i) { %>
              <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
              <div class="form-check-inline">
                <!-- id here add index of the images -->
                <!-- value here add the rght data of the foto -->
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                <label for="image-<%=i%>">Löschen?</label>
              </div>
            <% }) %>
          </div>
          <div class="mb-3">
            <button class="btn btn-info">Speichern</button>
          </div>
        </form>
        <a href="/">Zurück</a>
      </div>
    </div>
