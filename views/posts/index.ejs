<% layout("layouts/boilerplate") %>
    <h1>Aktuelle Posts</h1>
    <div class="">
      <a href="/posts/new">Post Hinzuf√ºgen</a>
    </div>

      <% for(let post of posts) {%>
        <div class="card mb-3">
          <div class="row">
            <div class="col-md-4">
              <img class="img-fluid" alt="" src= "<%= post.images[0].url %>">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5><%=post.title%></h5>
                <p class= "card-text"><%=post.description%></p>
                <p class= "card-text">
                  <small class="text-muted"><%=post.location%></small>
                </p>
                <a href="/posts/<%=post._id%>" class="btn btn-primary">Mehr</a>
              </div>
            </div>
          </div>
        </div>
      <% }%>
