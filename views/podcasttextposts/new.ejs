<link rel="stylesheet" href="/styles/forms.css">
<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class=""><span class="title-line line-pink"> Podcast Text Hinzufügen</span></h1>
  <div id="form-podcasttext-new" class="col-6 offset-3">
    <form action="/podcasts" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title" name="podcasttext[title]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Text</label>
        <textarea class="form-control" type="text" id="description" name="podcasttext[description]" required></textarea>
        <script>
          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-aktuelles-blue ">Speichern</button>
      </div>
    </form>
    <a class="btn btn-success btn-mina" href="/podcast">Zurück</a>
  </div>
</div>
