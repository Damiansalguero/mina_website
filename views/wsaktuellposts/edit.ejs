<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center"><span class="title-line line-pink">Workshop Haupttext Bearbeiten</span></h1>
   <div class="col-6 offset-3">
    <form action="/ueberworkshops/<%=wsnew._id%>?_method=PUT" method="post" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title1" name="wsnew[title]" required value="<%=wsnew.title%>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Text</label>
        <textarea class="form-control" type="text" id="description" name="wsnew[description]" required><%=wsnew.description%></textarea>
        <script type="text/javascript">
          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Aktuallisieren</button>
      </div>
    </form>
    <a class="btn btn-primary btn-mina" href="/workshops">Zurück</a>
  </div>
</div>
